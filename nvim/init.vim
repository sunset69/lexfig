" 开启粘贴模式
set paste

" 设置tab为4个空格
set tabstop=4
set shiftwidth=4
set expandtab

" 启用行号
set number

" 启用相对行号
" set relativenumber

" 启用自动缩进
set autoindent


" 所搜大小写区分
set ignorecase " 启用搜索时忽略大小写
" set smartcase " 启用搜索时区分大小写

" 启用高亮搜索结果
set hlsearch

" 启用括号匹配
set showmatch

" 启用自动换行
set wrap

" 设置配色方案
" colorscheme <scheme-name>

" 启用语法高亮
syntax enable

" 设置字体
" set guifont=<font-name>:<font-size>
